<div class="mt-4">
    <h3>Edit Course</h3>
    <form method="POST" action="/course/{{ course._id }}?_method=PUT">
        <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" name="name" value="{{course.name}}" class="form-control" id="inputName"
                aria-describedby="inputName" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="inputName">description</label>
            <input type="text" name="description" value="{{course.description}}" class="form-control" id="inputName"
                aria-describedby="inputName" placeholder="Enter description">
        </div>
        <div class="form-group">
            <label for="inputName">Video Id</label>
            <input type="text" name="videoId" value="{{course.description}}" class="form-control" id="inputName"
                aria-describedby="inputName" placeholder="Enter video Id">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
